{
  "name": "sugarcube-formatter",
  "displayName": "sugarcube-formatter",
  "description": "format sugarcube twine code",
  "version": "0.0.14",
  "author": "rohal12",
  "publisher": "rohal12",
  "engines": {
    "vscode": "^1.105.1"
  },
  "categories": [
    "Formatters"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sugarcubeFormatter.formatAllFiles",
        "title": "Format All Twee Files in Workspace",
        "category": "SugarCube Formatter"
      },
      {
        "command": "sugarcubeFormatter.formatDirectory",
        "title": "Format Twee Files in Directory",
        "category": "SugarCube Formatter"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "sugarcubeFormatter.formatDirectory",
          "when": "explorerResourceIsFolder",
          "group": "sugarcube@1"
        }
      ]
    },
    "languages": [
      {
        "id": "twee",
        "aliases": [
          "Twee",
          "SugarCube"
        ],
        "extensions": [
          ".twee",
          ".tw"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "SugarCube Formatter",
      "properties": {
        "sugarcubeFormatter.stripSingleWordQuotes": {
          "type": "boolean",
          "default": true,
          "description": "Remove quotes from single-word macro arguments (e.g., \"PassageName\" becomes PassageName)"
        },
        "sugarcubeFormatter.quoteStyle": {
          "type": "string",
          "enum": [
            "double",
            "single",
            "preserve"
          ],
          "default": "double",
          "description": "Quote style for macro arguments: 'double' converts to double quotes, 'single' converts to single quotes, 'preserve' keeps original style"
        },
        "sugarcubeFormatter.emptyLinesBeforePassages": {
          "type": [
            "string",
            "number"
          ],
          "enum": [
            "preserve",
            0,
            1,
            2
          ],
          "default": 2,
          "description": "Number of empty lines before passage headers: 'preserve' keeps original spacing, or 0/1/2 for specific line count"
        },
        "sugarcubeFormatter.indentationEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable indentation of content inside block macros"
        },
        "sugarcubeFormatter.indentationStyle": {
          "type": "string",
          "enum": [
            "spaces",
            "tabs"
          ],
          "default": "spaces",
          "description": "Indentation style: 'spaces' or 'tabs'"
        },
        "sugarcubeFormatter.indentationSize": {
          "type": "number",
          "enum": [
            2,
            4
          ],
          "default": 4,
          "description": "Number of spaces per indent level (only applies when indentationStyle is 'spaces')"
        },
        "sugarcubeFormatter.formatJsonPassages": {
          "type": "boolean",
          "default": true,
          "description": "Format passages containing JSON with proper indentation"
        }
      }
    }
  },
  "keywords": [
    "twee",
    "twee3",
    "twee3-sugarcube-2",
    "twine"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rohal12/sugarcube-formatter.git"
  },
  "bugs": {
    "url": "https://github.com/rohal12/sugarcube-formatter/issues"
  },
  "activationEvents": [
    "workspaceContains:**/*.{tw,twee}",
    "onLanguage:twee3-sugarcube-2",
    "onLanguage:twee3"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
